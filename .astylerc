# braces and indent
style=java
indent=tab=4

# indentation
indent-classes
indent-switches
indent-namespaces
indent-continuation=2
indent-preproc-block
indent-preproc-define
indent-col1-comments
#min-conditional-indent=0
max-continuation-indent=50

# padding
break-blocks
pad-oper
pad-header
unpad-paren
align-pointer=type

# formatting
break-one-line-headers
add-braces
attach-return-type
attach-return-type-decl
convert-tabs

# other options
lineend=linux
